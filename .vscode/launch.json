  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Solarplant",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "buildFlags": "-ldflags='-X \"main.CommitHash=d7b9bd6\" -X \"main.BuildTime=2020-01-01T00:00:00Z\"'",
      "envFile": "${workspaceFolder}/.env",
      "program": "${workspaceFolder}/main.go",
    },
    {
      "name": "Test Current File",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${relativeFileDirname}",
      "showLog": false
    }
  ]
}