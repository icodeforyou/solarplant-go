{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Solarplant",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "buildFlags": "-ldflags='-X \"main.Version=v1.0.0-dev\"'",
      "envFile": "${workspaceFolder}/.env",
      "program": "${workspaceFolder}/main.go",
    },
    {
      "name": "Test Current File",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${relativeFileDirname}",
      "showLog": false
    }
  ]
}